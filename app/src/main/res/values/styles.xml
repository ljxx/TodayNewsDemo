<?xml version="1.0" encoding="utf-8"?>
<resources  xmlns:android="http://schemas.android.com/apk/res/android">

    <!-- Base application theme. -->
    <style name="AppTheme" parent="Theme.AppCompat.Light.NoActionBar">
        <!-- Customize your theme here. -->
        <item name="colorPrimary">@color/colorPrimary</item>
        <item name="colorPrimaryDark">@color/colorPrimaryDark</item>
        <item name="colorAccent">@color/colorAccent</item>
        <item name="clickableBackground">@color/colorAccent</item>
    </style>

    <style name="Theme.Light" parent="Theme.AppCompat.Light">
        <item name="android:windowBackground">@color/default_window_bg</item>
        <item name="android:listSelector">?clickableBackground</item>
        <item name="clickableBackground">@drawable/clickable_background</item>
        <item name="font_color">@color/ssxinheihui1</item>
        <item name="main_bg">@color/white</item>
        <item name="font_color2">@color/ssxinzi3</item>
        <item name="divider_black">@color/write_comment_divider_color</item>
        <item name="divider_light_grey">@color/ssxinxian1</item>
        <item name="font_red">@color/subscribe_category_btn_bg_normal</item>
        <item name="white_bg">@color/white</item>
        <item name="windowNoTitle">?android:windowNoTitle</item>
    </style>

    <style name="RecycleViewCommon">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">match_parent</item>
        <item name="android:scrollbars">none</item>
    </style>

    <style name="new_title">
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:maxLines">2</item>
        <item name="android:ellipsize">end</item>
        <!--<item name="android:textColor">?attr/font_color</item>-->
        <item name="android:textSize">@dimen/new_title</item>
    </style>

    <style name="new_info_layout_text_style">
        <item name="android:textSize">13.0dip</item>
        <item name="android:textColor">@color/ssxinzi2</item>
        <item name="android:ellipsize">end</item>
        <item name="android:maxLines">1</item>
        <item name="android:includeFontPadding">false</item>
        <item name="android:lineSpacingExtra">0.0dip</item>
    </style>
</resources>
